{
  "name": "MAUI Linux Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/mauienv",
  "workspaceMount": "source=${localWorkspaceFolder}/maui,target=/mauienv,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.mono-debug",
        "eamodio.gitlens"
      ]
    }
  },
  "remoteUser": "root"
}